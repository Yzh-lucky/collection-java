<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Y.utils.Update">
    <insert id="insertToOrderProduct" parameterType="Order">
        insert into `order_information`.`order_product`(`order_code`,`product_code`,`product_name`,`product_price`,`order_price`) values
        <foreach collection="products" item="p" separator=",">
            (#{orderCode},#{p.productCode},#{p.productName},#{p.productPrice},#{orderPrice})
        </foreach>
    </insert>

    <insert id="insertNewToOrderProduct" >
        insert into `order_information`.`order_product`(`order_code`,`product_code`,`product_name`,`product_price`,`order_price`) values
        (#{code},#{p.productCode},#{p.productName},#{p.productPrice},(select `order_price` from `order_information`.`order` where `order_code` = #{code}))
    </insert>

    <delete id="deleteToOrderProduct">
        delete from `order_information`.`order_product` where `order_code` = #{code} and `product_code` = #{p.productCode}
    </delete>

    <update id="updateToOrderProduct">
        update `order_information`.`order_product` set `order_price` = (select `order_price` from `order_information`.`order` where `order_code` = #{code}) where `order_code` = #{code}
    </update>
</mapper>