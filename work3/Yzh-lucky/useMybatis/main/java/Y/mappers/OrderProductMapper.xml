<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Y.mappers.OrderProductMapper">
    <select id="getOrderProductById" resultType="OrderProduct">
        select `order_code`,`product_code`,`product_name`,`product_price`,`order_price` from `order_information`.`order_product` where `order_code`=#{id}
    </select>
    <select id="getAllOrderProduct" resultType="OrderProduct">
         select    `order_code`,`product_code`,`product_name`,`product_price`,`order_price` from `order_information`.`order_product`
    </select>
</mapper>